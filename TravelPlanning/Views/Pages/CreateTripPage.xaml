<Page x:Class="TravelPlanning.Views.Pages.CreateTripPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:TravelPlanning.Views.Pages"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTripPage">

    <StackPanel Margin="42" VerticalAlignment="Top">
        <StackPanel>
            <Label>封面圖</Label>
            <Image Source="{Binding CoverImg}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding UploadImageCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Image>
        </StackPanel>


        <StackPanel>
            <Label>行程名稱</Label>
            <TextBox Text="{Binding Name}"></TextBox>
        </StackPanel>



        <StackPanel>
            <Label>開始日期</Label>
            <DatePicker SelectedDate="{Binding Date}"></DatePicker>
        </StackPanel>

        <StackPanel>
            <Label>天數</Label>
            <TextBox Text="{Binding Days}"></TextBox>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center">
            <Button Command="{Binding CreateTripCommand}">送出</Button>
        </StackPanel>
    </StackPanel>
</Page>
